{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "baseUrl": "../portfolio",
    "paths": {
      "@/*": ["../portfolio/src/*"]
    }
  },
  "include": ["../portfolio/src/**/*", "../portfolio/types/**/*", "../portfolio/vite-env.d.ts"],
  "exclude": ["../portfolio/node_modules", "../portfolio/dist"]
}
